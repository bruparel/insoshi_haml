%li.list.gallery
  .profile-image
    = link_to image_tag(gallery.icon_url), gallery_path(gallery)
  %p
    = link_to h(gallery.title), gallery_path(gallery), :class => 'gallery_title'
    - if current_person?(gallery.person)
      = link_to image_tag("icons/picture_edit.png", :class => 'actioner'),   edit_gallery_path(gallery), :title => 'Edit Gallery'
      - if @person.galleries.count > 1
        = link_to image_tag("icons/picture_delete.png", :class => 'actioner'),  gallery, :method => :delete,  :confirm =>  "Are you sure you want to delete this gallery?", :title => "Delete Gallery"
  = display gallery.short_description
