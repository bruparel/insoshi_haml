- column_div :type => :primary do
  = error_messages_for :photo
  %h2
    Update Photo
  %p
    = image_tag(@display_photo.public_filename(:thumbnail))
  - form_for @photo do |f|
    .form_field
      = f.label :title
      = f.text_field :title
    .form_field
      = submit_tag 'Update', :class => 'button'
      = link_to "Cancel", gallery_path(@photo.gallery)
